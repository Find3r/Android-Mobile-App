<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/alternative_background"
    tools:context="com.nansoft.find3r.activity.InfoNoticiaActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swprlPerfilUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lstvPublicacionesUsuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/error" />

    <com.melnykov.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabAgregarNoticiaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/add_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:fab_colorNormal="@color/android_darkorange"
        fab:fab_colorPressed="@color/anaranjado"
        fab:fab_colorRipple="@color/cafeoscuro" />

</RelativeLayout>