<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nansoft.find3r.activity.ComentarioActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swprlComentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp">

        <ListView
            android:id="@+id/lstvComentarios"
            android:layout_width="fill_parent"

            android:layout_height="fill_parent">

        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/borde"
        android:padding="5dp">

        <com.nansoft.find3r.helpers.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res/com.nansoft.find3r"
            android:id="@+id/imgvLogoUsuario_add_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_below="@+id/txtvNombreUsuario_add_comment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:border="true"
            app:border_color="@color/GrayLight"
            app:border_width="4dp"/>

        <TextView
            android:id="@+id/txtvNombreUsuario_add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgvLogoUsuario_add_comment"
            android:text="Nombre usuario"/>

        <EditText
            android:id="@+id/edtDescripcionComentario_add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgvLogoUsuario_add_comment"
            android:hint="@string/insComentario"
            android:layout_below="@id/txtvNombreUsuario_add_comment"
            android:lines="2" />

        <Button
            style="@style/button"
            android:id="@+id/btnChekComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtDescripcionComentario_add_comment"
            android:text="Agregar comentario"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>



</RelativeLayout>
