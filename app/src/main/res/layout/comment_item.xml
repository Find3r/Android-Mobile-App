<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.nansoft.find3r.helpers.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res/com.nansoft.find3r"
            android:id="@+id/imgvLogoUsuario_comment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:border="true"
            app:border_color="@color/GrayLight"
            app:border_width="4dp"
            android:src="@drawable/user"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txtvNombreUsuario_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@id/imgvLogoUsuario_comment"
            android:text="@string/name"/>

        <TextView
            android:id="@+id/txtvDescripcion_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgvLogoUsuario_comment"
            android:text="@string/location"
            android:layout_below="@id/txtvNombreUsuario_comment"/>

        <TextView
            android:id="@+id/txtvFecha_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtvDescripcion_comment"
            android:layout_toRightOf="@id/imgvLogoUsuario_comment"
            android:text="Hace 6 horas"/>



</RelativeLayout>

